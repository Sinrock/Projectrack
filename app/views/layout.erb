  <body>
    
    <div class="wrapper">

    <% if flash[:error] %>
    <h2 style="color:red"><%= flash[:error] %></h2>
    <% end %>

    <% if flash[:message] %>
    <h2 style="color:green"><%= flash[:message] %></h2>
    <% end %>

    <div class="nav">
      <% if logged_in? %>
      <a href="/" style="font-size:125%;">&nbsp;&nbsp;&nbsp;Home&nbsp;&nbsp;&nbsp;</a>
      <a href="/projects" style="font-size:125%;">&nbsp;&nbsp;All Projects&nbsp;&nbsp;&nbsp;</a>
      <a href="/projects/new" style="font-size:125%;">&nbsp;&nbsp;Create a New Project&nbsp;&nbsp;&nbsp;</a>
      <a href="/logout" style="font-size:125%;">&nbsp;&nbsp;Log Out&nbsp;&nbsp;&nbsp;</a>
      <% end %>
    </div>

        <%= yield %>

      <footer class="branding">
        <small>&copy; 2020 <strong>ProjecTrack</strong></small>
      </footer>
    </div>

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1/jquery.min.js"></script>
