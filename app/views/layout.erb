  <body>

  <style>
* {
  box-sizing: border-box;
}

body {
  margin: 0;
  font-family: Arial, Helvetica, sans-serif;
  background-color: grey;
}

.sidenav {
  height: 100%;
  width: 200px;
  position: fixed;
  z-index: 1;
  top: 0;
  left: 0;
  background-color: #111;
  overflow-x: hidden;
}

.sidenav a {
  color: white;
  padding: 16px;
  text-decoration: none;
  display: block;
}

.sidenav a:hover {
  background-color: #ddd;
  color: black;
}

.content {
  margin-left: 200px;
  padding-left: 20px;
}
.wrapper {
    background: C0C0C0;
    -moz-box-shadow: 0 0 10px rgba(0,0,0,.3);
    -webkit-box-shadow: 0 0 10px rgba(0,0,0,.3);
    box-shadow: 0 0 10px rgba(0,0,0,.3);
    margin: 16px auto;
    max-width: 960px;
    padding: 2.25%; /* 18px / 800px */
    width: 85%;
    vertical-align: middle;
    horizontal-align: middle;
    opacity:0.85;
    border-radius:60px;
  }
   .container {
    font-size: 16px;
  }
</style>

<div class="sidenav">
  <% if logged_in%>
  <a href="/">Home</a>
  <hr border-color="white">
  <a href="/projects">View Projects</a>
  <hr color="lightgray" size="1">
  <a href="/projects/new">Create A Project</a>
  <hr color="lightgray" size="1">
  <a href="/logout">Log Out</a>
  <hr color="lightgray" size="1">
  <% else %>
  <a href="/">Home</a>
  <hr color="lightgray" size="1">
  <a href="/login">Log In</a>
  <hr color="lightgray" size="1">
  <a href="/signup">Create An Account</a>
  <hr color="lightgray" size="1">
  <% end %>
  <img src="https://kaahur.com/wp-content/uploads/2020/10/pexels-photo-209235.jpeg" width="200" height="150" style="vertical-align:bottom">
</div>
    
<div class="wrapper">

<% if flash[:error] %>
  <h2 style="color:red"><%= flash[:error] %></h2>
<% end %>

<% if flash[:message] %>
  <h2 style="color:green"><%= flash[:message] %></h2>
<% end %>

<%= yield %>

  <footer class="branding">
    <small>&copy; 2020 <strong>ProjecTrack</strong></small>
  </footer>
</div>

